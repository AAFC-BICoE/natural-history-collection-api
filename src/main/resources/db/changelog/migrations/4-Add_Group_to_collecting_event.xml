<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
        context="schema-change">

    <changeSet id="4-Add_Group_to_collecting_event" context="schema-change" author="keyuk">

        <!-- Add the column -->
        <addColumn tableName="collecting_event">
            <column name="collector_group_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Foreign key constraint -->
        <addForeignKeyConstraint
                baseColumnNames="collector_group_id"
                baseTableName="collecting_event"
                constraintName="fk_collector_group_id"
                referencedColumnNames="id"
                referencedTableName="collector_group"/>

        <!-- add index -->
        <sql>
            CREATE INDEX ON collecting_event (collector_group_id);
        </sql>

    </changeSet>

</databaseChangeLog>
