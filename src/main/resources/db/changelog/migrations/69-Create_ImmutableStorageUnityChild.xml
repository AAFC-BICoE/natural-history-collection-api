<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog db/changelog/xsd/dbchangelog-4.4.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="69-Create_ImmutableStorageUnityChild" context="schema-change" author="steven luu">
       <createTable tableName="immutable_storage_unit_child">
            <column autoIncrement="true" name="id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_immutable_storage_unit_child_id"/>
            </column>
            <column name="uuid" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="_group" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamptz" defaultValueComputed="current_timestamp"/>
            <column name="created_by" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
            <column name="storage_unit_type_id" type="integer">
                <constraints foreignKeyName="fk_storage_unit_type_id" references="storage_unit_type(id)"/>
            </column>
            <column name="parent_storage_unit_id" type="integer">
                <constraints foreignKeyName="fk_parent_storage_unit_id" references="storage_unit(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
