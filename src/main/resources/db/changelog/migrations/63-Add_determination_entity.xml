<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="63-Add_determination_entity" context="schema-change" author="keyuk">
        <sql>
            CREATE TYPE scientific_name_source AS ENUM (
            'ColPlus'
            );

            CREATE TYPE type_status AS ENUM (
            'TypeStatus'
            );
        </sql>

        <createTable tableName="determination">
            <column autoIncrement="true" name="id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_determination_id"/>
            </column>
            <column name="uuid" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_on" type="timestamptz" defaultValueComputed="current_timestamp"/>
            <column name="created_by" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
            <column name="type_status" type="type_status"/>
            <column name="type_status_evidence" type="VARCHAR(250)"/>
            <column name="scientific_name_source" type="scientific_name_source"/>
            <column name="determiner" type="uuid"/>
            <column name="determinedOn" type="DATE"/>
            <column name="qualifier" type="VARCHAR(150)"/>
            <column name="scientific_name_details" type="VARCHAR(150)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
