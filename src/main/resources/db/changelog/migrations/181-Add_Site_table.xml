<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://local.xsd/dbchangelog-4.4.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="181-Add_Site_table" context="schema-change" author="pyalamanchli">
        <createTable tableName="site">
            <column autoIncrement="true" name="id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_site_id"/>
            </column>

            <column name="uuid" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="created_on" type="timestamptz" defaultValueComputed="current_timestamp"/>
            <column name="created_by" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(250)">
              <constraints nullable="false" unique="true" />
            </column>

            <column name="_group" type="VARCHAR(50)">
              <constraints nullable="false"/>
            </column>

            <column name="start_date" type="date" />
            <column name="end_date" type="date" />
            <column name="code" type="VARCHAR(50)" />
            <column name="multilingual_description" type="jsonb"/>
            <column name="attachment" type="uuid[]"/>
        </createTable>
    </changeSet>

    <changeSet id="181-Add_relationship_between_CollectingEvent_and_Site" context="schema-change" author="pyalamanchli">
        <addColumn tableName="collecting_event">
            <column name="site_id" type="integer">
                <constraints foreignKeyName="fk_site_id" references="site(id)"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>