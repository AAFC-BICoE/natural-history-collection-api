<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://local.xsd/dbchangelog-4.4.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="181-Add_material_sample_name_index" context="schema-change" author="jgrieb">
        <sql>
            CREATE INDEX material_sample_name_lower_idx
            ON collection.material_sample (collection_id, lower(material_sample_name))
            WHERE material_sample_name IS NOT NULL;
        </sql>
    </changeSet>
</databaseChangeLog>
