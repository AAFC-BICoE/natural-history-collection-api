<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  <changeSet context="schema-change" id="1-Add_agent_role_table_1" author="ganx">
    <sql>
      CREATE TYPE role_type AS ENUM (
        'COLLECTING_EVENT '
      );
    </sql>	
  </changeSet>				   
  <changeSet context="schema-change" id="1-Add_agent_role_table_2" author="ganx">
    <createTable tableName="agent_role">
	  <column autoIncrement="true" name="id" type="SERIAL">
	    <constraints primaryKey="true" primaryKeyName="pk_agent_role_id" />
      </column>
      <column name="uuid" type="uuid">
        <constraints nullable="false" unique="true" />
      </column>
      <column name="type" type="role_type">
        <constraints nullable="false" />
	  </column>
      <column name="name" type="jsonb" >
       <constraints nullable="false" />
      </column>
      <column name="created_date" type="timestamptz" defaultValueComputed="current_timestamp" />
      <column name="created_by" type="VARCHAR(250)">
        <constraints nullable="false" />
      </column>	  
    </createTable>
  </changeSet>
</databaseChangeLog>    